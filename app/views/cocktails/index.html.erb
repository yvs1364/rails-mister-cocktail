<div class="banner">

  <h1>Cocktails</h1>
</div>

<div class="container">
  <div class="row">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="cards-category ">
          <p><%=link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
<p><%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %></p>
</div>
